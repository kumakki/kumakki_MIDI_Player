        <Grid Margin="8">
            <Grid.RowDefinitions>
                <RowDefinition Height="120"/>
                <RowDefinition Height="30"/>
                <RowDefinition Height="120"/>
                <RowDefinition Height="30"/>
                <RowDefinition Height="30"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            <!-- OR Filter Section -->
            <Grid Grid.Row="0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="30"/>
                    <RowDefinition Height="30"/>
                    <RowDefinition Height="30"/>
                    <RowDefinition Height="30"/>
                </Grid.RowDefinitions>
                <CheckBox x:Name="chk_EnableFilterOr"
                  Content="Enable OR Filter"
                  Margin="4"
                  VerticalAlignment="Center"
                  HorizontalAlignment="Left" />
                <TextBlock Grid.Row="1"
                   Margin="4"
                   VerticalAlignment="Center"
                   HorizontalAlignment="Left"
                   Text="Ignore notes if their Gate or Velocity is less than or equal to the specified value." />
                <TextBlock Grid.Row="2"
                   Margin="4"
                   VerticalAlignment="Center"
                   HorizontalAlignment="Left"
                   Text="Ignore notes with Gate ≤" />
                <TextBox x:Name="txt_IgnoreGateOr"
                 Grid.Row="2"
                 Margin="125,6,4,4"
                 Width="30"
                 HorizontalAlignment="Left"
                 PreviewTextInput="OnInput_"/>
                <TextBlock Grid.Row="3"
                   Margin="4"
                   VerticalAlignment="Center"
                   HorizontalAlignment="Left"
                   Text="Ignore notes with Velocity ≤" />
                <TextBox x:Name="txt_IgnoreVelOr"
                 Grid.Row="3"
                 Margin="143,6,4,4"
                 Width="30"
                 HorizontalAlignment="Left"
                 PreviewTextInput="OnInput_"/>
            </Grid>
            <!-- AND Filter Section -->
            <Grid Grid.Row="2">
                <Grid.RowDefinitions>
                    <RowDefinition Height="30"/>
                    <RowDefinition Height="30"/>
                    <RowDefinition Height="30"/>
                    <RowDefinition Height="30"/>
                </Grid.RowDefinitions>
                <CheckBox x:Name="chk_EnableFilterAnd"
                  Content="Enable AND Filter"
                  Margin="4"
                  VerticalAlignment="Center"
                  HorizontalAlignment="Left" />
                <TextBlock Grid.Row="1"
                   Margin="4"
                   VerticalAlignment="Center"
                   HorizontalAlignment="Left"
                   Text="Ignore notes only if both their Gate and Velocity are less than or equal to the specified values."/>
                <TextBlock Grid.Row="2"
                   Margin="4"
                   VerticalAlignment="Center"
                   HorizontalAlignment="Left"
                   Text="Ignore notes with Gate ≤" />
                <TextBox x:Name="txt_IgnoreGateAnd"
                 Grid.Row="2"
                 Margin="125,6,4,4"
                 Width="30"
                 HorizontalAlignment="Left"
                 PreviewTextInput="OnInput_"/>
                <TextBlock Grid.Row="3"
                   Margin="4"
                   VerticalAlignment="Center"
                   HorizontalAlignment="Left"
                   Text="Ignore notes with Velocity ≤" />
                <TextBox x:Name="txt_IgnoreVelAnd"
                 Grid.Row="3"
                 Margin="143,6,4,4"
                 Width="30"
                 HorizontalAlignment="Left"
                 PreviewTextInput="OnInput_"/>
            </Grid>
            <CheckBox x:Name="chk_ApplyIgnoreToDrawing"
          Content="Apply ignore settings to drawing"
          Margin="4,0,0,0"
          VerticalAlignment="Center"
          HorizontalAlignment="Left"
          Grid.Row="4"/>
            <TextBlock Grid.Row="5"
               Text="*These settings will take effect when the next MIDI file is loaded." />
            <Button Grid.Row="6"
                Content="OK"
            Margin="4,4,62,4"
            Width="50"
            HorizontalAlignment="Right"
            Click="OnClick_OK"/>
            <Button Grid.Row="6"
            Content="Cancel"
            Margin="4"
            Width="50"
            HorizontalAlignment="Right"
            Click="OnClick_Cancel" />
        </Grid>
    </Grid>
</Window>
