<Window x:Class="kumakki_MIDI_Player.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:kumakki_MIDI_Player"
        mc:Ignorable="d"
        ResizeMode="NoResize"
        x:Name="KMPWindow"
        Title="kumakki MIDI Player" Height="748" Width="1280">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="30"/>
            <RowDefinition Height="30"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="30"/>
        </Grid.RowDefinitions>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="30"/>
                <ColumnDefinition Width="30"/>
                <ColumnDefinition Width="30"/>
                <ColumnDefinition Width="30"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="80"/>
                <ColumnDefinition Width="70"/>
                <ColumnDefinition Width="100"/>
                <ColumnDefinition Width="80"/>
                <ColumnDefinition Width="70"/>
                <ColumnDefinition Width="135"/>
                <ColumnDefinition Width="120"/>
                <ColumnDefinition Width="65"/>
                <ColumnDefinition Width="110"/>
                <ColumnDefinition Width="90"/>
                <ColumnDefinition Width="110"/>
            </Grid.ColumnDefinitions>
            <Button x:Name="btn_Load"
                    Content="Load"
                    Margin="4"
                    Padding="4,0"
                    Click="OnClick_Load"/>
            <Button x:Name="btn_Play"
                    Grid.Column="1"
                    Content="1"
                    Margin="4"
                    Click="OnClick_Play" />
            <Button x:Name="btn_Stop"
                    Grid.Column="2"
                    Content="2"
                    Margin="4"
                    Click="OnClick_Stop" />
            <Button x:Name="btn_Pause"
                    Grid.Column="3"
                    Content="3"
                    Margin="4"
                    Click="OnClick_Pause" />
            <Button x:Name="btn_Setting"
                    Grid.Column="4"
                    Content="4"
                    Margin="4"
                    Click="OnClick_Setting" />
            <TextBlock x:Name="Speed"
                       Grid.Column="7"
                       Margin="4"
                       VerticalAlignment="Center"
                       HorizontalAlignment="Right"
                       Text="Speed: 4"/>
            <Slider x:Name="Slider_Speed"
                    Grid.Column="8"
                    Margin="4"
                    Minimum="0.25"
                    Maximum="8"
                    Value="4.25"
                    TickFrequency="0.25"
                    IsSnapToTickEnabled="True"
                    IsMoveToPointEnabled="True"
                    ValueChanged="OnValueChanged_Speed"/>
            <TextBlock x:Name="Time"
                       Grid.Column="9"
                       Margin="4"
                       VerticalAlignment="Center"
                       HorizontalAlignment="Right"
                       Text="Time: 999:99"/>
            <TextBlock x:Name="BPM"
                       Grid.Column="10"
                       Margin="4"
                       VerticalAlignment="Center"
                       HorizontalAlignment="Right"
                       Text="BPM: 9,999"/>
            <TextBlock x:Name="NoteCount"
                       Grid.Column="11"
                       Margin="4"
                       VerticalAlignment="Center"
                       HorizontalAlignment="Right"
                       Text="Notes: 999,999,999,999"/>
            <TextBlock x:Name="NPS"
                       Grid.Column="12"
                       Margin="4"
                       VerticalAlignment="Center"
                       HorizontalAlignment="Right"
                       Text="NPS: 999,999,999"/>
            <TextBlock x:Name="FPS"
                       Grid.Column="13"
                       Margin="4"
                       VerticalAlignment="Center"
                       HorizontalAlignment="Right"
                       Text="FPS: 9999"/>
            <TextBlock x:Name="lateTimeText"
                       Grid.Column="14"
                       Margin="4"
                       VerticalAlignment="Center"
                       HorizontalAlignment="Right"
                       Text="Latency: 999.999s"/>
            <TextBlock x:Name="bpqn"
                       Grid.Column="15"
                       Margin="4"
                       VerticalAlignment="Center"
                       HorizontalAlignment="Right"
                       Text="BPQN：9999"/>
            <TextBlock x:Name="nowTick"
                       Grid.Column="16"
                       Margin="5"
                       VerticalAlignment="Center"
                       HorizontalAlignment="Right"
                       Text="999,999,999 ticks"/>
        </Grid>
        <Slider x:Name="Slider_PlayTime"
                Grid.Row="1"
                Margin="4"
                Minimum="0"
                Maximum="1"
                Value="0"
                TickFrequency="1"
                IsSnapToTickEnabled="True"
                IsMoveToPointEnabled="True"
                ValueChanged="OnValueChanged_PlayTime"/>
        <Grid Grid.Row="2" x:Name="ViewGrid">
            <Image x:Name="KeyImageWhite"
               Margin="0"
                   Stretch="Fill"
               VerticalAlignment="Top"
               HorizontalAlignment="Left"
               Focusable="False" />
            <Image x:Name="KeyImageBlack"
               Margin="0"
                   Stretch="Fill"
               VerticalAlignment="Top"
               HorizontalAlignment="Left"
               Focusable="False" />
        </Grid>
        <Grid Grid.Row="3">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="150"/>
                <ColumnDefinition Width="150"/>
                <ColumnDefinition Width="150"/>
                <ColumnDefinition Width="50"/>
            </Grid.ColumnDefinitions>
            <TextBlock x:Name="StatusText"
                       Grid.Column="0"
                       Margin="4"
                       VerticalAlignment="Center"
                       HorizontalAlignment="Left"
                       Text="Status: "/>
            <Button x:Name="btn_Quit"
                    Grid.Column="5"
                    Content="Quit"
                    Margin="4"
                    Click="OnClick_Quit"/>
        </Grid>
    </Grid>
</Window>
